{{#if logoFile}}
    <img test-id="uiBadgeLogo"
        draggable="false"
        src="{{logoFile}}"
        class="ui-badge-logo"
        onerror="$(this).remove()">
{{/if}}

{{#if badgeType}}
    <svg test-id="uiBadgeCoin"
        class="ui-badge-coin ui-badge-coin-{{badgeType}} {{badgeLengthClass}} {{badgeColorClass}}"
        viewBox="0 0 100 100">
        <circle cx="50" cy="50" r="50"></circle>
        <text>
        <tspan x="50" y="50" text-anchor="middle" dy="0.35em">{{badgeContent}}</tspan>
        </text>
    </svg>
{{/if}}
